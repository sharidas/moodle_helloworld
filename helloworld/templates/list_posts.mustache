{{!
    List the posts
}}
<div class="card text-center">
    <div class="card-body">
        <p class="card-text">{{message}}</p>
        <p class="card-text"><small class="text-muted">{{display_date_time}}</small></p>
        {{#can_delete}}
            <button class="btn fa fa-trash-o" type="submit"></button>
        {{/can_delete}}
        <div userid="{{userid}}" timecreated="{{timecreated}}" hidden></div>
    </div>
</div>
